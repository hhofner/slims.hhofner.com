---
type Props = {
  title: string;
  url: string;
};

const { title, url } = Astro.props;

// Create the share text
const shareText = `${title}\n\n${url}`;
const encodedText = encodeURIComponent(shareText);
---

<div class="inline-flex items-center gap-3 bg-[#6364FF] text-white px-4 py-3 rounded-lg text-sm">
  <div class="flex items-center gap-2">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 16 16"><path fill="currentColor" d="M11.19 12.195c2.016-.24 3.77-1.475 3.99-2.603c.348-1.778.32-4.339.32-4.339c0-3.47-2.286-4.488-2.286-4.488C12.062.238 10.083.017 8.027 0h-.05C5.92.017 3.942.238 2.79.765c0 0-2.285 1.017-2.285 4.488l-.002.662c-.004.64-.007 1.35.011 2.091c.083 3.394.626 6.74 3.78 7.57c1.454.383 2.703.463 3.709.408c1.823-.1 2.847-.647 2.847-.647l-.06-1.317s-1.303.41-2.767.36c-1.45-.05-2.98-.156-3.215-1.928a4 4 0 0 1-.033-.496s1.424.346 3.228.428c1.103.05 2.137-.064 3.188-.189zm1.613-2.47H11.13v-4.08c0-.859-.364-1.295-1.091-1.295c-.804 0-1.207.517-1.207 1.541v2.233H7.168V5.89c0-1.024-.403-1.541-1.207-1.541c-.727 0-1.091.436-1.091 1.296v4.079H3.197V5.522q0-1.288.66-2.046c.456-.505 1.052-.764 1.793-.764c.856 0 1.504.328 1.933.983L8 4.39l.417-.695c.429-.655 1.077-.983 1.934-.983c.74 0 1.336.259 1.791.764q.662.757.661 2.046z"/></svg>
    <span class="text-xs font-medium">Share on Mastodon</span>
  </div>

  <div class="flex items-center gap-2">
    <input
      type="text"
      id="mastodon-instance"
      placeholder="your.instance.com"
      class="bg-white text-black px-2 py-1 rounded text-xs w-32 focus:outline-none focus:ring-1 focus:ring-white"
      data-share-text={encodedText}
    />
    <button
      id="mastodon-share"
      class="bg-[#5249c7] hover:bg-[#4239b7] px-3 py-1 rounded text-xs transition-colors"
    >
      Share
    </button>
  </div>
</div>

<script>
  function shareMastodon() {
    const input = document.getElementById('mastodon-instance') as HTMLInputElement;
    const shareText = input?.getAttribute('data-share-text');
    const instance = input?.value.trim();

    if (!instance) {
      input?.focus();
      return;
    }

    if (shareText) {
      const cleanInstance = instance.replace(/^https?:\/\//, '').replace(/\/$/, '');
      const mastodonUrl = `https://${cleanInstance}/share?text=${shareText}`;
      window.open(mastodonUrl, '_blank');
    }
  }

  document.getElementById('mastodon-share')?.addEventListener('click', shareMastodon);

  document.getElementById('mastodon-instance')?.addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
      shareMastodon();
    }
  });
</script>