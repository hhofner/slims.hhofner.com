---
type Props = {
	quote: string;
	author: string;
}

const { quote, author } = Astro.props as Props
---
<blockquote class="p-4 border-s-4 border-gray-300 bg-gray-50 dark:border-gray-500 dark:bg-gray-800 rounded">
	{quote}
</blockquote>
<small class="w-full flex justify-end underline">{author}</small>